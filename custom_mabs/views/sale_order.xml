<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="view_sale_order_no_create_product" model="ir.ui.view">
        <field name="name">Sale Order no create product</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='order_lines']/field[@name='order_line']/tree[1]" position="attributes">
                <attribute name="options">{"no_create":true}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
