                            <div class="oe_structure"/>
                </div>
            </t>

        </template>

        <template id="donation_report_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="custom_mabs.donation_report_document_report" t-lang="lang"/>
                </t>
            </t>
        </template>

    </data>
</odoo>